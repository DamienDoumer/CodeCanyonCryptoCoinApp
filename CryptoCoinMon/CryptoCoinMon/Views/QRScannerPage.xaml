<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoCoinMon.Views.QRScannerPage">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <ActivityIndicator IsVisible="{Binding IsScanning}" HorizontalOptions="Center" VerticalOptions="Start"/>
            <Label FontSize="Large" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
            <Button HorizontalOptions="Center" VerticalOptions="Center" 
                    Text="Scan QR Code"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>